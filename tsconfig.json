{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./components/*"]
    },
    "lib": ["dom", "esnext"]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}
